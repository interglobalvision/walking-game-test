// STRUCUTRE

  // GRID BUILDER

$cols = 8
$col = 80px
$gutter = 16px
.container
  margin: 0 auto
  width: 100%
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

    // FLUID RESPONSIVE CONTAINER STYLE IF NO GRID

// .container
//   max-width: 700px
//   width: 90%
//   margin: 0 auto

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

// COLORS

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

html
  background-color: $color-white-soft
  color: $color-black-soft

// TYPOGRAPHY

$font-size-basic = 19px
$font-leading-basic = 1.4em

$font-size-h1 = 40px
$font-size-h2 = 30px
$font-size-h3 = 24px

html
  font-family: sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic

  // HEADINGS

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

  // LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  transition:opacity .2s
  &:hover
    opacity:.5

    // BUTTONS
button
  padding: 20px
  font-size: 1em
