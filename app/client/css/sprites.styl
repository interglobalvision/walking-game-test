#stage
  position: fixed
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  overflow: hidden

.coach-angry
  position: absolute
  top: 25%
  left: 25%
  width: 50%;
  height: 50%;
  background: url('sprites/coach-angry.png');
  background-position: 0% center
  background-repeat: no-repeat
  background-size: 200%
  animation: two .2s steps(2) infinite

@keyframes two
  100%
    background-position: 200% center
     
@keyframes three
  100%
    background-position: 300% center
    
@keyframes four
  100%
    background-position: 400% center
    
@keyframes five
  100%
    background-position: 500% center